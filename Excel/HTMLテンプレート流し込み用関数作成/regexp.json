// jsonのような記述で、シングルクォートで括ることも、json内にコメントを書くことも可能です。
{
   "ダブルクォートを関数に置換"  :{"g": ['"', '"&char(34)&"']}

   // シリアル値を日付型で取得
   ,"日付フォーマットで参照"    :{"g": ['date#([a-zA-Z][1-9])#','"&TEXT($1, "yyyy年m月d日")&"']}
   // 英語書式
   ,"日付フォーマットで参照(en)"    :{"g": ['date-en#([a-zA-Z][1-9])#','"&TEXT($1, "[$-409]mmmm d, yyyy;@")&"']}

   // A1 - Z9 まで
   ,"通常参照" :{"g": ['#([a-zA-Z][1-9])#','"&$1&"']}

   ,"文章全体を関数化"         :{"m": ['((.*\n*.*)*)','="$1"']}
}
